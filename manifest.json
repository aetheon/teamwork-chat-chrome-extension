{
  "manifest_version": 2,

  "name": "Teamwork Chat",
  "description": "Displays Teamwork Chat Notifications",
  "version": "1.0",



  "background": {
    "page": "src/backgroundPage.html",
    "persistent": false
  },

  "browser_action": {
    "default_icon": "res/16x16icon.png",
    "default_title": "Teamwork Chat"


  },

  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "cookies",
    "history",
    "*://*.teamwork.com/"
  ]
}