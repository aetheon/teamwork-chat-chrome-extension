{
  "manifest_version": 2,

  "name": "Teamwork Chat",
  "description": "Displays Teamwork Chat Notifications",
  "version": "1.0",



  "background": {
    "scripts": ["lib/axios.min.js", "src/websocket.js", "src/api.js", "src/index.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "res/16x16icon.png",
    "default_title": "Teamwork Chat"


  },

  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "https://chattest.teamwork.com/"
  ]
}