{
  "manifest_version": 2,

  "name": "Teamwork Chat",
  "description": "Displays Teamwork Chat Notifications",
  "version": "1.0",



  "background": {
    "page": "src/backgroundPage.html",
    "persistent": false
  },
  "icons": {
    "16": "res/16x16icon.png",
    "48": "res/48x48.png",
    "128": "res/128x128.png"
  },
  "browser_action": {
    "default_icon": "res/16x16icon.png",
    "default_title": "Teamwork Chat",
    "default_popup": "src/notloggedinpopup.html"

  },

  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "cookies",
    "*://*.teamwork.com/"
  ]
}